<Window x:Class="DOCUMAT.Impression.QrCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DOCUMAT.Impression"
        mc:Ignorable="d"
        Title="QrCode" Height="400" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        Width="400">
    <StackPanel HorizontalAlignment="Center" Name="parentImage">
        <Image Source="/Images/loader.gif" 
               x:Name="QrCodeImage"
               Width="130" 
               Height="130"
               Margin="20"
               />
        <Button x:Name="btnImprimer"
                Content="IMPRIMER LE QRCODE"
                Click="btnImprimer_Click"
                Margin="10"
                 />
    </StackPanel>
</Window>
