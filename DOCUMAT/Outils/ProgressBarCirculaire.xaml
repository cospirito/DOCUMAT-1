<UserControl x:Class="DOCUMAT.Outils.ProgressBarCirculaire"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DOCUMAT.Outils"
             x:Name="_this"
             mc:Ignorable="d" Height="300" Width="300">
    <Grid>
        <Ellipse x:Name="SecondCircle" Stroke="red" StrokeThickness="50" Opacity="0.2"/>
        <Ellipse x:Name="FirstCircle" Stroke="Blue" StrokeThickness="50" StrokeDashArray="{ Binding ElementName=_this, Path=ProgressIndicator}"/>
        <TextBlock Text="{Binding ElementName=_this, Path=TextIndicator}"
                   Foreground="White" FontSize="50" FontFamily="Agency Fb" VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
        <!--<Ellipse x:Name="MiddleCircle" Stroke="White" StrokeThickness="20"/>-->
    </Grid>
</UserControl>
