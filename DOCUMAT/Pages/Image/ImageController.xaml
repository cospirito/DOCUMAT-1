                        <StackPanel HorizontalAlignment="Center">
                            <Image x:Name="ImgCorrecte"
                            Source="/Images/correct1.png"
                            Height="150"                                            
                            Margin="0 0 0 10"/>
                            <Image x:Name="ImgEdit"
                            Visibility="Collapsed"
